- @description = "If you have more questions, or would like an estimate from us or to book your move, please contact us. We look forward to connecting with you!"
- @keywords = 'Booking, Book Move, Contact Us, Call Us, Phone, Email'
- @page_title = 'Contact Us | Request Estimate | Booking | Dogwood Moving Co.'
- @canonical = 'https://www.dogwoodmoving.com/contact/'

.wrap.nav-pad
  %h1.page-banner
    Contact
  .info-block.container.contact-container
    .col-container.img-left.hide-overflow
      .left-col{'data-entrance'=>'from-left'}
        =aws_img('photos/packing-info-1.jpg')
      .right-col{'data-entrance'=>'from-right'}
        %h2.off-black
          %span.b
            Phone
        %p.off-black
          =link_to dogwood_phone, "tel:#{dogwood_phone}", class:'phone-btn green'
        %h2.off-black
          %span.b
            Email
        %p.off-black
          =link_to dogwood_email, "tel:#{dogwood_email}"
        .button-row
          .dogwood-btn-outline.green.left{'data-toggle'=>"modal",'data-target'=>"#contact-modal"}
            Message
        .button-row
          .dogwood-btn-outline.green.left{'data-toggle'=>"modal",'data-target'=>"#booking-modal"}
            Book Now
        .button-row
          .dogwood-btn-outline.green.left{'data-toggle'=>"modal",'data-target'=>"#estimate-modal"}
            Request Estimate