- @page_title = 'Menu'

.dogwood-home-wrap
  %a.left-block.half-block{:href=>'/home'}
    .sun
    .dogwood-logo
    .dogwood-visit-message
      Continue
      %br
      to Site
    .dogwood-btn.primary#home-book-btn{'data-toggle'=>'modal', 'data-target'=>'#booking-modal', onclick:"event.preventDefault();"}
      Book Now
    #home-phone-btn.phone-btn{onclick:"event.preventDefault();window.open('tel:#{dogwood_phone}');"}
      =dogwood_phone
  .right-block.half-block
    %a.dogwood-cta-block.cta-1{:href=>'/pricing'}
      %h2
        Pricing
      %h3
        All the info you'll need to book your move today.
    %a.dogwood-cta-block.cta-2{:href=>'/packing'}
      %h2
        Packing + Supplies
      %h3
        We'll get you prepared for your move in no time.
    %a.dogwood-cta-block.cta-3{:href=>'/faq'}
      %h2
        Frequently Asked Questions
      %h3
        Our info library will answer anything you're unsure about.
    %a.dogwood-cta-block.cta-4{:href=>'/team'}
      %h2
        Join the Team
      %h3
        Apply for Driver or Mover positions at Dogwood today!
    .dogwood-cta-block.double
      %a.dogwood-cta-block.half-cta.cta-5{:href=>'/about'}
        %h2.half-h2
          About Us
        %h3
          Learn about the Dogwood Promise.
      %a.dogwood-cta-block.half-cta.cta-6{:href=>'/contact'}
        %h2.half-h2
          Contact
        %h3
          All the ways you can reach us.

